#!/usr/bin/env ruby

require 'shellwords'
require 'fileutils'

user = "tom"
host = "owlbear"
smut_path = Pathname.new("/home/tom/.porn/Unsorted")

begin
  Resolv.getaddress host
rescue Resolv::ResolvError
  puts "Unable to resolve hostname \"#{host}\"; aborting"
  abort
end

ARGV.each do |fn|
  unless File.exist? fn
    puts "File `fn` does not exist; skipping"
    next
  end

  shell_fn = Shellwords.shellescape fn
  shell_fn_basename = Shellwords.shellescape File.basename(fn)

  `scp #{shell_fn} tom@owlbear:/home/tom/.porn/Unsorted/#{shell_fn_basename}`

  puts "removing #{fn}"
  FileUtils.rm fn
end